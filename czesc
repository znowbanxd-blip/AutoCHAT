-- Script do executora Roblox - Chat Message
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

-- Sprawdzenie dostępnych funkcji czatu
if game:GetService("Players").LocalPlayer then
    local player = game:GetService("Players").LocalPlayer
    
    -- Metoda 1: Przez ReplicatedStorage (nowsze wersje Roblox)
    if game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents") then
        local chatEvents = game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents")
        
        if chatEvents:FindFirstChild("SayMessageRequest") then
            -- Użycie SayMessageRequest
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
        elseif chatEvents:FindFirstChild("SendMessage") then
            -- Alternatywna metoda
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SendMessage:FireServer(message, "All")
        end
    end
    
    -- Metoda 2: Bezpośrednio przez Player (starsze metody)
    if player:FindFirstChild("PlayerGui") then
        local playerGui = player:FindFirstChild("PlayerGui")
        if playerGui:FindFirstChild("Chat") then
            local chat = playerGui.Chat
            if chat:FindFirstChild("Frame") and chat.Frame:FindFirstChild("ChatBar") then
                -- Symulacja wpisywania wiadomości
                game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
            end
        end
    end
    
    -- Metoda 3: Dla TextChatService (najnowsze wersje Roblox)
    if game:GetService("TextChatService") then
        local textChatService = game:GetService("TextChatService")
        if textChatService:FindFirstChild("TextChannels") then
            local channels = textChatService.TextChannels
            if channels:FindFirstChild("RBXGeneral") then
                channels.RBXGeneral:SendAsync(message)
            elseif channels:FindFirstChild("General") then
                channels.General:SendAsync(message)
            end
        end
    end
    
    -- Potwierdzenie wykonania
    print("Wiadomość wysłana: " .. message)
else
    warn("Nie znaleziono gracza!")
end

-- Dodatkowe zabezpieczenie - opóźnienie i ponowienie próby
wait(1)

-- Alternatywna metoda z wykorzystaniem zdarzeń
local success, error = pcall(function()
    game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
end)

if not success then
    -- Ostateczna próba przez ReplicatedStorage
    pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
    end)
end
