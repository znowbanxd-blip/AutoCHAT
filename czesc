-- ULTRA Auto-Chat System (100% DZIAÅA)
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

if not _G.UltraChatSystem then
    _G.UltraChatSystem = true
    _G.active = true
    
    local Players = game:GetService("Players")
    local localPlayer = Players.LocalPlayer
    local RunService = game:GetService("RunService")
    
    -- GÅÃ“WNA FUNKCJA WYSYÅANIA
    local function ultraSendMessage()
        if not _G.active or not localPlayer or not localPlayer.Character then
            return false
        end
        
        -- PrÃ³buj rÃ³Å¼ne metody
        local methods = {
            function()
                game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
            end,
            function()
                game:GetService("TextChatService").TextChannels.General:SendAsync(message)
            end,
            function()
                game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
            end,
            function()
                game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SendMessage:FireServer(message, "All")
            end
        }
        
        for i, method in ipairs(methods) do
            local success = pcall(method)
            if success then
                print("ðŸŽ¯ WiadomoÅ›Ä‡ wysÅ‚ana (metoda " .. i .. ")")
                return true
            end
        end
        
        return false
    end
    
    -- MEGA WYKRYWANIE SERVER HOP
    local function megaServerHopDetection()
        local lastJob = game.JobId
        local lastChar = localPlayer.Character
        
        -- Detekcja JobID
        spawn(function()
            while _G.active do
                RunService.Heartbeat:Wait()
                if game.JobId ~= lastJob then
                    lastJob = game.JobId
                    print("ðŸŒ SERVER HOP WYKRYTY!")
                    wait(15) -- DÅ‚ugie czekanie na zaÅ‚adowanie
                    ultraSendMessage()
                end
            end
        end)
        
        -- Detekcja Character
        localPlayer.CharacterAdded:Connect(function(char)
            print("ðŸ”„ Nowy charakter - Server Hop?")
            wait(12)
            ultraSendMessage()
            
            -- Potwierdzenie po dodatkowym czasie
            wait(10)
            ultraSendMessage()
        end)
        
        -- Detekcja przez PlayerGui
        localPlayer:GetPropertyChangedSignal("PlayerGui"):Connect(function()
            print("ðŸ“± PlayerGui zmieniony")
            wait(8)
            ultraSendMessage()
        end)
    end
    
    -- PERFEKCYJNY TIMER 30s
    local function perfect30sTimer()
        spawn(function()
            local nextSend = tick() + 30
            while _G.active do
                local now = tick()
                if now >= nextSend then
                    if localPlayer and localPlayer.Character then
                        ultraSendMessage()
                    end
                    nextSend = now + 30
                end
                wait(1) -- Sprawdzaj co sekundÄ™
            end
        end)
    end
    
    -- START SYSTEMU
    print("ðŸ”¥ ULTRA SYSTEM INICJALIZACJA...")
    wait(10) -- DÅ‚ugie czekanie na zaÅ‚adowanie gry
    
    megaServerHopDetection()
    perfect30sTimer()
    
    -- Pierwsze uruchomienie
    if localPlayer.Character then
        ultraSendMessage()
    else
        localPlayer.CharacterAdded:Wait()
        wait(8)
        ultraSendMessage()
    end
    
    print("ðŸ’¯ ULTRA SYSTEM AKTYWNY!")
    print("âœ… 100% gwarancja dziaÅ‚ania przy server hop")
    print("âœ… DokÅ‚adnie co 30 sekund")
    print("âœ… Wiele metod wykrywania")
    
    -- Zabezpieczenie na przyszÅ‚oÅ›Ä‡
    _G.stopChatSystem = function()
        _G.active = false
        print("ðŸ›‘ System zatrzymany")
    end
end
