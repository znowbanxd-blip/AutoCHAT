-- NAJLEPSZY Auto-Chat Bot
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

if not _G.UltimateChatBot then
    _G.UltimateChatBot = true
    
    local Players = game:GetService("Players")
    local localPlayer = Players.LocalPlayer
    
    local function sendChat()
        if not localPlayer or not localPlayer.Character then
            return false
        end
        
        -- TextChatService
        local success1 = pcall(function()
            game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
        end)
        
        -- ReplicatedStorage
        local success2 = pcall(function()
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
        end)
        
        return success1 or success2
    end

    -- 1. PÄ˜TLA CO 30 SEKUND
    spawn(function()
        wait(10) -- Poczekaj na start
        while true do
            sendChat()
            wait(30)
        end
    end)

    -- 2. WYKRYWANIE SERVER HOP PRZEZ CHARACTER
    localPlayer.CharacterAdded:Connect(function()
        wait(12) -- DÅ‚uÅ¼sze czekanie na server hop
        sendChat()
    end)

    -- 3. DODATKOWE SPRAWDZANIE CO 60 SEKUND
    spawn(function()
        while true do
            wait(60)
            if _G.LastMessageTime and (tick() - _G.LastMessageTime) > 45 then
                sendChat()
            end
            _G.LastMessageTime = tick()
        end
    end)

    -- START
    wait(15)
    sendChat()
    
    print("ğŸ”¥ CHAT BOT DZIAÅA! Co 30s + Server Hop")
end
