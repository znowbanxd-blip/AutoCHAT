-- PROSTY I DZIAŁAJĄCY SKRYPT
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

-- Funkcja do wysyłania wiadomości
local function sendMessage()
    -- Spróbuj nowy system czatu
    local success = pcall(function()
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
    end)
    
    -- Jeśli nie działa, spróbuj stary system
    if not success then
        pcall(function()
            game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
        end)
    end
end

-- System co 30 sekund
spawn(function()
    while true do
        sendMessage()
        wait(30) -- Czekaj 30 sekund
    end
end)

-- System przy server hop (gdy postać się spawni)
game.Players.LocalPlayer.CharacterAdded:Connect(function()
    wait(3) -- Poczekaj aż postać się załaduje
    sendMessage()
end)

-- Wyślij pierwszą wiadomość od razu
wait(3)
sendMessage()

print("SKRYPT DZIAŁA! Wiadomość co 30s + przy server hop")
