-- Zaawansowany auto-execute z TeleportService
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

if not _G.autoChatSystem then
    _G.autoChatSystem = true
    _G.messageSent = false
    
    local function sendChatMessage()
        if not _G.messageSent then
            _G.messageSent = true
            
            -- Op√≥≈∫nienie dla pewno≈õci ≈ºe gracz jest za≈Çadowany
            wait(2)
            
            local function trySendMessage()
                -- TextChatService
                if game:GetService("TextChatService") then
                    local tcs = game:GetService("TextChatService")
                    if tcs:FindFirstChild("TextChannels") then
                        local channels = tcs.TextChannels
                        if channels:FindFirstChild("RBXGeneral") then
                            pcall(function() channels.RBXGeneral:SendAsync(message) end)
                            return true
                        elseif channels:FindFirstChild("General") then
                            pcall(function() channels.General:SendAsync(message) end)
                            return true
                        end
                    end
                end
                
                -- ReplicatedStorage
                if game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents") then
                    local events = game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents
                    if events:FindFirstChild("SayMessageRequest") then
                        pcall(function() events.SayMessageRequest:FireServer(message, "All") end)
                        return true
                    end
                end
                
                return false
            end
            
            local success = trySendMessage()
            print(success and "‚úì Auto-wiadomo≈õƒá wys≈Çana!" or "‚úó B≈ÇƒÖd wysy≈Çania auto-wiadomo≈õci")
        end
    end
    
    -- Wykonaj natychmiast
    sendChatMessage()
    
    -- Reset flagi przy nowym charakterze (nowy serwer/spawn)
    game:GetService("Players").LocalPlayer.CharacterAdded:Connect(function()
        _G.messageSent = false
        wait(3)
        sendChatMessage()
    end)
    
    -- Nas≈Çuchiwanie teleportacji
    if game:GetService("TeleportService") then
        game:GetService("TeleportService").TeleportInit:Connect(function()
            _G.messageSent = false
        end)
    end
    
    print("üîÑ Auto-chat system AKTYWNY - dzia≈Ça przy ka≈ºdej zmianie serwera!")
end
