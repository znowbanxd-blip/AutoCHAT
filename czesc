-- PEÅNY SKRYPT AUTO-CHAT
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

-- GÅ‚Ã³wna funkcja wysyÅ‚ania wiadomoÅ›ci
local function sendChatMessage()
    -- Metoda 1: Nowy system czatu (TextChatService)
    local success1 = pcall(function()
        game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
    end)
    
    -- Metoda 2: Stary system czatu (ReplicatedStorage)
    local success2 = pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
    end)
    
    -- Metoda 3: Alternatywna metoda
    local success3 = pcall(function()
        game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SendMessage:FireServer(message, "All")
    end)
    
    if success1 or success2 or success3 then
        print("âœ… WiadomoÅ›Ä‡ wysÅ‚ana: " .. message)
        return true
    else
        print("âŒ Nie udaÅ‚o siÄ™ wysÅ‚aÄ‡ wiadomoÅ›ci")
        return false
    end
end

-- System automatyczny co 30 sekund
spawn(function()
    wait(10) -- Poczekaj na start
    while true do
        if game:GetService("Players").LocalPlayer and game:GetService("Players").LocalPlayer.Character then
            sendChatMessage()
        end
        wait(30) -- Czekaj dokÅ‚adnie 30 sekund
    end
end)

-- System auto-execute przy server hop
game:GetService("Players").LocalPlayer.CharacterAdded:Connect(function(character)
    print("ğŸ”„ Wykryto server hop/respawn")
    wait(8) -- Czekaj aÅ¼ postaÄ‡ siÄ™ zaÅ‚aduje
    sendChatMessage()
end)

-- Pierwsze wykonanie po wejÅ›ciu do gry
wait(8)
sendChatMessage()

print("ğŸš€ AUTO-CHAT SYSTEM AKTYWNY!")
print("ğŸ“ Funkcje:")
print("   â€¢ Auto-execute przy wejÅ›ciu do gry")
print("   â€¢ Auto-execute przy server hop")
print("   â€¢ WiadomoÅ›Ä‡ co 30 sekund")
print("   â€¢ Multiple metody czatu")
print("ğŸ¯ DziaÅ‚a w wiÄ™kszoÅ›ci gier Roblox")

-- Dodatkowe zabezpieczenie - okresowe sprawdzanie
spawn(function()
    while true do
        wait(60) -- Sprawdzaj co 60 sekund
        if not game:GetService("Players").LocalPlayer.Character then
            -- JeÅ›li gracz nie ma postaci, poczekaj i wyÅ›lij
            game:GetService("Players").LocalPlayer.CharacterAdded:Wait()
            wait(5)
            sendChatMessage()
        end
    end
end)
