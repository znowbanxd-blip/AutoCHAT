-- ULEPSZONY Auto-Execute dla Server Hop
local message = "1M M0n3y & Aut0 H3r3 /eGVFBbDcm3"

if not _G.ServerHopExecutor then
    _G.ServerHopExecutor = true
    _G.lastServer = game.JobId
    
    local Players = game:GetService("Players")
    local localPlayer = Players.LocalPlayer
    
    local function executeChatMessage()
        -- Poczekaj a≈º wszystko siƒô za≈Çaduje
        wait(4)
        
        -- Sprawd≈∫ czy to nowy serwer
        if _G.lastServer ~= game.JobId then
            _G.lastServer = game.JobId
            
            -- Pr√≥buj wys≈Çaƒá wiadomo≈õƒá przez 10 sekund
            for i = 1, 5 do
                wait(2)
                
                -- TextChatService
                local success1 = pcall(function()
                    game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
                end)
                
                -- ReplicatedStorage
                local success2 = pcall(function()
                    game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(message, "All")
                end)
                
                if success1 or success2 then
                    print("üéØ Wiadomo≈õƒá wys≈Çana na nowym serwerze! (" .. i .. " pr√≥ba)")
                    break
                end
            end
        else
            -- Ten sam serwer, ale spr√≥buj wys≈Çaƒá
            pcall(function()
                game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(message)
            end)
        end
    end

    -- WYKONAJ OD RAZU
    executeChatMessage()
    
    -- WYKRYWAJ ZMIANƒò SERWERA PRZEZ:
    
    -- 1. Zmianƒô JobId
    spawn(function()
        while true do
            wait(1)
            if _G.lastServer ~= game.JobId then
                executeChatMessage()
            end
        end
    end)
    
    -- 2. Nowy charakter (respawn/teleport)
    localPlayer.CharacterAdded:Connect(function(char)
        wait(3)
        executeChatMessage()
    end)
    
    -- 3. Gracz do≈ÇƒÖcza do gry
    Players.PlayerAdded:Connect(function(player)
        if player == localPlayer then
            wait(4)
            executeChatMessage()
        end
    end)
    
    -- 4. Periodyczne sprawdzanie
    spawn(function()
        while true do
            wait(10)
            if localPlayer.Character then
                pcall(executeChatMessage)
            end
        end
    end)
    
    print("üî• AUTO-EXECUTE DZIA≈ÅA! Bƒôdzie wysy≈Çaƒá przy ka≈ºdym server hop!")
end
